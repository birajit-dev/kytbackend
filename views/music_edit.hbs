      <div class="br-pagebody">
        <div class="br-section-wrapper">
          <h6 class="tx-gray-800 tx-uppercase tx-bold tx-14 mg-b-10">Reels Post</h6>
        <form action="/api/v1/post/music/update" method="POST">
        <input type="hidden" name="_id" value="{{singleMusic._id}}">
          <div class="form-layout form-layout-1">
            <div class="row mg-b-25">

              <div class="col-lg-4">
                <div class="form-group">
                  <label class="form-control-label">Music Title: <span class="tx-danger">*</span></label>
                  <input class="form-control" type="text" name="music_title" value="{{singleMusic.music_title}}">
                </div>
              </div><!-- col-4 -->

              <div class="col-lg-4">
                <div class="form-group mg-b-10-force">
                  <label class="form-control-label">Music Category: <span class="tx-danger">*</span></label>
                  <select class="form-control select2" data-placeholder="Shorts Category" name="music_category">
                    <option value="{{singleMusic.music_category}}" selected>{{singleMusic.music_category}}</option>
                    {{#each music_categories}}
                    <option value="{{mcategories_Id}}">{{mcategories_title}}</option>
                    {{/each}}
                  </select>
                </div>
              </div><!-- col-4 -->

              <div class="col-lg-4">
                <div class="form-group mg-b-10-force">
                  <label class="form-control-label">Music Sub-Category: <span class="tx-danger">*</span></label>
                  <select class="form-control select2" data-placeholder="Shorts Category" name="music_subcategory">
                    <option value="{{singleMusic.music_subcategory}}" selected>{{singleMusic.music_subcategory}}</option>
                    <option value="chalisa">Chalisa</option>
                    <option value="paath">Paath</option>
                    <option value="aarti">Aarti</option>
                    <option value="bhajan">Bhajan</option>
                    <option value="mantra">Mantra</option>
                  </select>
                </div>
              </div><!-- col-4 -->


              <div class="col-lg-4">
                <div class="form-group">
                  <label class="form-control-label">Music Singer: <span class="tx-danger">*</span></label>
                  <input class="form-control" type="text" name="music_singer" value="{{singleMusic.music_singer}}">
                </div>
              </div><!-- col-4 -->


              <div class="col-lg-4">
                <div class="form-group">
                  <label class="form-control-label">Thumbnail Path: <span class="tx-danger">*</span></label>
                  <input class="form-control" type="text" name="music_thumbnail" value="{{singleMusic.music_thumbnail}}">
                </div>
              </div><!-- col-4 -->

              <div class="col-lg-4">
                <div class="form-group mg-b-10-force">
                  <label class="form-control-label">Music Path: <span class="tx-danger">*</span></label>
                  <input class="form-control" type="text" name="music_path" value="{{singleMusic.music_path}}">
                </div>
              </div><!-- col-8 -->


              <div class="col-lg-4">
                <div class="form-group mg-b-10-force">
                  <label class="form-control-label">Music Duration: <span class="tx-danger">*</span></label>
                  <input class="form-control" type="text" name="music_duration" value="{{singleMusic.music_duration}}">
                </div>
              </div><!-- col-8 -->




            <div class="col-lg-4">
                <div class="form-group mg-b-10-force">
                  <label class="form-control-label">Music Publisher: <span class="tx-danger">*</span></label>
                  <input class="form-control" type="text" name="music_publisher" value="{{singleMusic.music_publisher}}">
                </div>
              </div><!-- col-8 -->

              
            </div><!-- row -->

            <div class="form-layout-footer">
              <button class="btn btn-info" type="submit">Music Update</button>
            </div><!-- form-layout-footer -->
          </div><!-- form-layout -->
          </form>

          




        </div><!-- br-section-wrapper -->
      </div><!-- br-pagebody -->