      <div class="br-pagebody">
        <div class="br-section-wrapper">
          <h6 class="tx-gray-800 tx-uppercase tx-bold tx-14 mg-b-10">Reels Post</h6>
        <form action="/api/v1/post/reels/update" method="POST">
        <input type="hidden" name="_id" value="{{reels._id}}">
          <div class="form-layout form-layout-1">
            <div class="row mg-b-25">
              <div class="col-lg-4">
                <div class="form-group">
                  <label class="form-control-label">Title: <span class="tx-danger">*</span></label>
                  <input class="form-control" type="text" name="reels_name" value="{{reels.reels_name}}">
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-4">
                <div class="form-group">
                  <label class="form-control-label">Shorts Path: <span class="tx-danger">*</span></label>
                  <input class="form-control" type="text" name="reels_path" value="{{reels.reels_path}}">
                </div>
              </div><!-- col-4 -->
              <div class="col-lg-4">
                <div class="form-group">
                  <label class="form-control-label">Thumbnail Path: <span class="tx-danger">*</span></label>
                  <input class="form-control" type="text" name="reels_thumbnail" value="{{reels.reels_thumbnail}}">
                </div>
              </div><!-- col-4 -->

              <div class="col-lg-8">
                <div class="form-group mg-b-10-force">
                  <label class="form-control-label">Short Summary: <span class="tx-danger">*</span></label>
                  <input class="form-control" type="text" name="reels_summary" value="{{reels.reels_summary}}">
                </div>
              </div><!-- col-8 -->

              <div class="col-lg-4">
                <div class="form-group mg-b-10-force">
                  <label class="form-control-label">Shorts Category: <span class="tx-danger">*</span></label>
                  <select class="form-control select2" data-placeholder="Shorts Category" name="reels_category">
                    <option value="{{reels.reels_category}}" selected>{{reels.reels_category}}</option>
                    <option label="Choose Category"></option>
                    <option value="Hanuman">Hanuman</option>
                    <option value="Temple">Temple</option>
                    <option value="Random">Random</option>
                  </select>
                </div>
              </div><!-- col-4 -->
            </div><!-- row -->

            <div class="form-layout-footer">
              <button class="btn btn-info" type="submit">Update Reels</button>
            </div><!-- form-layout-footer -->
          </div><!-- form-layout -->
          </form>


        </div><!-- br-section-wrapper -->
      </div><!-- br-pagebody -->